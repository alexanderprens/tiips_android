<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_inventory_item_title"/>

    <EditText
        android:id="@+id/new_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_inv_name"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/new_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_inv_desc"
        android:inputType="textCapSentences" />

    <EditText
        android:id="@+id/new_item_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_inv_value"
        android:inputType="number" />

    <Spinner
        android:id="@+id/new_item_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/new_item_barcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_inv_barcode"
        android:inputType="textCapCharacters" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/new_item_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_inv_cancel" />

        <Button
            android:id="@+id/new_item_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_inv_ok" />
    </LinearLayout>

</LinearLayout>