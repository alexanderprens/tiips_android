<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.helpingkidsroundfirst.hkrf.navigation_bar_activities.ips.locate_item.show_location.ShowLocationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/show_location_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

        <TextView
            android:id="@+id/show_location_coord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/Divider" />

        <ImageView
            android:id="@+id/show_location_graph"
            android:layout_width="347dp"
            android:layout_height="417dp"
            android:background="@android:color/transparent" />

        <View style="@style/Divider" />

        <Button
            android:id="@+id/show_location_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tag_alert" />

    </LinearLayout>

</ScrollView>
